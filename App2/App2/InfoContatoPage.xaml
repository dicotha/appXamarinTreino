<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.InfoContatoPage"
             
             >
    <ContentPage.Content >
        <StackLayout Padding="25" BackgroundColor="White">
            <TableView Intent="Settings" BackgroundColor="White">
                <TableRoot>
                    <TableSection Title="Informações">
                        <SwitchCell x:Name="SwitchTelefone" On="{Binding TemFreioABS}"></SwitchCell>
                        <SwitchCell Text="Privado" On="{Binding TemFreioABS}"></SwitchCell>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button x:Name="BotaoMaisDetalhes" Text="Mapa" VerticalOptions="EndAndExpand" HorizontalOptions="Center" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>